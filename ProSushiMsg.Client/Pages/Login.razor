@page "/login"
@using ProSushiMsg.Client.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-card">
        <h1>?? ProSushi Messenger</h1>
        <p>Вход в корпоративный чат</p>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }

        <form @onsubmit="HandleLogin">
            <div class="form-group">
                <label>Имя пользователя</label>
                <input type="text" class="form-control" @bind="Username" required />
            </div>

            <div class="form-group">
                <label>Пароль</label>
                <input type="password" class="form-control" @bind="Password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Войти
            </button>
        </form>

        <hr />
        <p class="text-center">
            Нет аккаунта? <a href="/register">Зарегистрируйся</a>
        </p>
    </div>
</div>

@code {
    private string Username = "";
    private string Password = "";
    private string? ErrorMessage;
    private bool IsLoading;

    private async Task HandleLogin()
    {
        try
        {
            Console.WriteLine($"?? Login: Попытка входа пользователя '{Username}'");
            
            IsLoading = true;
            ErrorMessage = null;
            StateHasChanged();

            var (success, error) = await AuthService.LoginAsync(Username, Password);

            Console.WriteLine($"?? Login: Результат - Success={success}, Error={error}");

            if (success)
            {
                Console.WriteLine("? Login: Вход успешен, редирект на /chats");
                Navigation.NavigateTo("/chats");
            }
            else
            {
                Console.WriteLine($"? Login: Ошибка входа - {error}");
                ErrorMessage = error ?? "Ошибка входа. Проверьте данные.";
            }

            IsLoading = false;
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"? Login EXCEPTION: {ex.Message}");
            Console.Error.WriteLine($"Stack: {ex.StackTrace}");
            ErrorMessage = $"Критическая ошибка: {ex.Message}";
            IsLoading = false;
        }
    }
}

