@page "/register"
@using ProSushiMsg.Client.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-card">
        <h1>?? ProSushi Messenger</h1>
        <p>Регистрация нового аккаунта</p>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="alert alert-success">@SuccessMessage</div>
        }

        <form @onsubmit="HandleRegister">
            <div class="form-group">
                <label>Имя пользователя</label>
                <input type="text" class="form-control" @bind="Username" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" @bind="Email" required />
            </div>

            <div class="form-group">
                <label>Пароль</label>
                <input type="password" class="form-control" @bind="Password" required />
            </div>

            <div class="form-group">
                <label>Подтвердите пароль</label>
                <input type="password" class="form-control" @bind="ConfirmPassword" required />
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Зарегистрироваться
            </button>
        </form>

        <hr />
        <p class="text-center">
            Уже есть аккаунт? <a href="/login">Войти</a>
        </p>
    </div>
</div>

@code {
    private string Username = "";
    private string Email = "";
    private string Password = "";
    private string ConfirmPassword = "";
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool IsLoading;

    private async Task HandleRegister()
    {
        try
        {
            Console.WriteLine($"?? Register: Попытка регистрации пользователя '{Username}'");
            
            IsLoading = true;
            ErrorMessage = null;
            SuccessMessage = null;
            StateHasChanged();

            // Валидация
            if (string.IsNullOrWhiteSpace(Username) || Username.Length < 3)
            {
                ErrorMessage = "Имя пользователя должно быть не менее 3 символов";
                IsLoading = false;
                return;
            }

            if (string.IsNullOrWhiteSpace(Email) || !Email.Contains("@"))
            {
                ErrorMessage = "Введите корректный email";
                IsLoading = false;
                return;
            }

            if (Password.Length < 6)
            {
                ErrorMessage = "Пароль должен быть не менее 6 символов";
                IsLoading = false;
                return;
            }

            if (Password != ConfirmPassword)
            {
                ErrorMessage = "Пароли не совпадают";
                IsLoading = false;
                return;
            }

            var (success, error) = await AuthService.RegisterAsync(Username, Email, Password);

            Console.WriteLine($"?? Register: Результат - Success={success}, Error={error}");

            if (success)
            {
                Console.WriteLine("? Register: Регистрация успешна!");
                SuccessMessage = "Регистрация успешна! Перенаправление на вход...";
                StateHasChanged();
                
                await Task.Delay(1500); // Показываем сообщение
                Navigation.NavigateTo("/login");
            }
            else
            {
                Console.WriteLine($"? Register: Ошибка регистрации - {error}");
                ErrorMessage = error ?? "Ошибка регистрации. Попробуйте другое имя пользователя.";
            }

            IsLoading = false;
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"? Register EXCEPTION: {ex.Message}");
            Console.Error.WriteLine($"Stack: {ex.StackTrace}");
            ErrorMessage = $"Критическая ошибка: {ex.Message}";
            IsLoading = false;
        }
    }
}

