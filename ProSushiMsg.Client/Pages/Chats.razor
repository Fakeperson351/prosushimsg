@page "/chats"
@using ProSushiMsg.Client.Services
@inject AuthService AuthService
@inject ChatService ChatService
@inject SignalRService SignalRService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IAsyncDisposable

<div class="chats-container">
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>?? Чаты</h2>
            <button class="btn-icon" @onclick="ShowNewChatDialog" title="Новый чат">
                ?
            </button>
        </div>

        @if (IsLoading)
        {
            <div class="spinner"></div>
        }
        else if (ChatsList.Count == 0)
        {
            <p class="empty-state">Нет чатов. Начни новый разговор!</p>
        }
        else
        {
            <div class="chat-list">
                @foreach (var chat in ChatsList)
                {
                    <div class="chat-item @(SelectedChatId == chat.Id ? "active" : "")"
                         @onclick="() => SelectChat(chat)">
                        <div class="chat-avatar">
                            <span class="status @(chat.IsOnline ? "online" : "offline")"></span>
                            @chat.OtherUserName.FirstOrDefault()
                        </div>
                        <div class="chat-info">
                            <div class="chat-name">@chat.OtherUserName</div>
                            <div class="chat-preview">@(chat.LastMessage ?? "Нет сообщений")</div>
                        </div>
                        @if (chat.UnreadCount > 0)
                        {
                            <div class="badge">@chat.UnreadCount</div>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <div class="main-chat">
        @if (SelectedChat == null)
        {
            <div class="empty-state-chat">
                <h2>Выбери чат</h2>
                <p>или создай новый</p>
            </div>
        }
        else
        {
            <div class="chat-header">
                <div>
                    <h3>@SelectedChat.OtherUserName</h3>
                    <span class="status-text @(SelectedChat.IsOnline ? "online" : "offline")">
                        @(SelectedChat.IsOnline ? "?? онлайн" : "? оффлайн")
                    </span>
                </div>
                <button class="btn-icon" @onclick="LogoutAsync" title="Выход">
                    ??
                </button>
            </div>

            <div class="messages-container" @ref="MessagesContainer">
                @foreach (var msg in Messages)
                {
                    <div class="message @(msg.SenderId == AuthService.CurrentUserId ? "sent" : "received")">
                        <div class="message-header">
                            <strong>@msg.SenderName</strong>
                            <span class="timestamp">@msg.Timestamp.ToString("HH:mm")</span>
                        </div>
                        <div class="message-content">
                            @if (string.IsNullOrEmpty(msg.FileUrl))
                            {
                                @msg.Content
                            }
                            else if (msg.FileType?.StartsWith("image") == true)
                            {
                                <img src="@msg.FileUrl" class="message-image" />
                            }
                            else if (msg.FileType?.StartsWith("audio") == true)
                            {
                                <audio controls class="message-audio">
                                    <source src="@msg.FileUrl" type="@msg.FileType" />
                                </audio>
                            }
                            else
                            {
                                <a href="@msg.FileUrl" target="_blank" class="btn-link">?? @msg.Content</a>
                            }
                        </div>
                        @if (msg.IsRead)
                        {
                            <span class="read-marker">??</span>
                        }
                    </div>
                }
            </div>

            <div class="message-input-area">
                <input type="text" 
                       class="message-input" 
                       placeholder="Введи сообщение..." 
                       @bind="MessageInput"
                       @onkeyup="@(async (KeyboardEventArgs e) => { if (e.Key == "Enter") { await SendMessage(); } })" />
                <button class="btn-send" @onclick="SendMessage" disabled="@(string.IsNullOrEmpty(MessageInput) || IsSending)">
                    ??
                </button>
                <input type="file" @ref="FileInput" style="display:none" @onchange="HandleFileUpload" />
                <button class="btn-icon" @onclick="HandleFileButtonClick">
                    ??
                </button>
            </div>
        }
    </div>
</div>

@* Модальное окно нового чата *@
@if (ShowNewChatModal)
{
    <div class="modal-overlay" @onclick="CloseNewChatDialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Новый чат</h3>
                <button class="btn-close" @onclick="CloseNewChatDialog">?</button>
            </div>
            <div class="modal-body">
                <label>Введите имя пользователя:</label>
                <input type="text" 
                       class="form-control" 
                       placeholder="Username пользователя"
                       @bind="NewChatUsername"
                       @onkeyup="@(async (KeyboardEventArgs e) => { if (e.Key == "Enter") { await CreateNewChat(); } })" />
                <p class="help-text">Введите username пользователя для начала чата</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseNewChatDialog">Отмена</button>
                <button class="btn btn-primary" @onclick="CreateNewChat" disabled="@string.IsNullOrWhiteSpace(NewChatUsername)">
                    Начать чат
                </button>
            </div>
        </div>
    </div>
}


@code {
private List<ChatDto> ChatsList = [];
private List<MessageDto> Messages = [];
private ChatDto? SelectedChat;
private int SelectedChatId;
private string MessageInput = "";
private bool IsLoading = true;
private bool IsSending = false;
private ElementReference MessagesContainer;
private ElementReference FileInput;
private bool ShowNewChatModal = false;
private string NewChatUsername = "";

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("🔵 Chats: Инициализация...");

        // Проверка аутентификации
        if (!AuthService.IsAuthenticated)
        {
            Console.WriteLine("❌ Не авторизован, переход на /login");
            Navigation.NavigateTo("/login");
            return;
        }

        // Загрузка чатов
        ChatsList = await ChatService.GetChatsAsync();
        IsLoading = false;

        // Восстановление выбранного чата из LocalStorage
        var savedChatId = await AuthService.GetSelectedChatIdAsync();
        if (savedChatId.HasValue && savedChatId.Value > 0)
        {
            Console.WriteLine($"🔄 Восстановление чата ID: {savedChatId.Value}");
            var savedChat = ChatsList.FirstOrDefault(c => c.Id == savedChatId.Value);
            if (savedChat != null)
            {
                await SelectChat(savedChat);
            }
        }

        // Подключение к SignalR
        try
        {
            await SignalRService.ConnectAsync();
            SignalRService.OnMessageReceived += OnMessageReceived;
            SignalRService.OnUserStatusChanged += OnUserStatusChanged;
            Console.WriteLine("✅ SignalR подключен");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ SignalR error: {ex.Message}");
        }
    }

    private async Task SelectChat(ChatDto chat)
    {
        Console.WriteLine($"📝 Выбран чат с: {chat.OtherUserName}");
        SelectedChat = chat;
        SelectedChatId = chat.Id;

        // Сохранение выбранного чата в LocalStorage
        await AuthService.SaveSelectedChatAsync(chat.Id);

        Messages = await ChatService.GetMessagesAsync(chat.Id);
        
        // Автопрокрутка вниз после загрузки сообщений
        await Task.Delay(100);
        await ScrollToBottom();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrEmpty(MessageInput) || SelectedChat == null)
            return;

        IsSending = true;
        var tempMessage = MessageInput;
        MessageInput = ""; // Очищаем поле сразу

        try
        {
            await SignalRService.SendMessageAsync(tempMessage, SelectedChat.Id);
            Messages.Add(new MessageDto
            {
                SenderId = AuthService.CurrentUserId ?? 0,
                SenderName = "Вы",
                Content = tempMessage,
                Timestamp = DateTime.Now,
                IsRead = true
            });
            
            // Автопрокрутка вниз после отправки
            await ScrollToBottom();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Send error: {ex.Message}");
            MessageInput = tempMessage; // Восстанавливаем текст при ошибке
        }
        finally
        {
            IsSending = false;
        }
    }

    private async void OnMessageReceived(int userId, string userName, string message)
    {
        Messages.Add(new MessageDto
        {
            SenderId = userId,
            SenderName = userName,
            Content = message,
            Timestamp = DateTime.Now,
            IsRead = false
        });
        StateHasChanged();
        
        // Автопрокрутка вниз при получении нового сообщения
        await ScrollToBottom();
    }

    private void OnUserStatusChanged(int userId, bool isOnline)
    {
        var chat = ChatsList.FirstOrDefault(c => c.OtherUserId == userId);
        if (chat != null)
        {
            chat.IsOnline = isOnline;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Автопрокрутка контейнера сообщений вниз
    /// </summary>
    private async Task ScrollToBottom()
    {
        try
        {
            await JS.InvokeVoidAsync("scrollToBottom", "messages-container");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"⚠️ Scroll error: {ex.Message}");
        }
    }

    /// <summary>
    /// Вызывается после каждого рендера для автопрокрутки
    /// </summary>
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && Messages.Any())
        {
            await ScrollToBottom();
        }
    }

    private async Task HandleFileUpload(ChangeEventArgs e)
    {
        // Реализуем загрузку файлов позже
    }

    private void ShowNewChatDialog()
    {
        ShowNewChatModal = true;
        StateHasChanged();
    }

    private void CloseNewChatDialog()
    {
        ShowNewChatModal = false;
        NewChatUsername = "";
        StateHasChanged();
    }

    private async Task CreateNewChat()
    {
        if (string.IsNullOrWhiteSpace(NewChatUsername))
            return;

        // Здесь должна быть логика поиска пользователя по имени и создания чата
        // Пока просто закроем диалог
        Console.WriteLine($"Создание чата с пользователем: {NewChatUsername}");
        
        // TODO: Реализовать API endpoint для поиска пользователя и создания чата
        // Например: POST /api/chats/start с параметром username
        
        CloseNewChatDialog();
    }

    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }

    private void HandleFileButtonClick()
    {
        // File upload через форму, не через Click()
        // Будет реализовано позже через drag-drop
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        SignalRService.OnMessageReceived -= OnMessageReceived;
        SignalRService.OnUserStatusChanged -= OnUserStatusChanged;
    }
}

